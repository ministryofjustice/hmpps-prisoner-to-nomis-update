  "components" : {
    "schemas" : {
      "ErrorResponse" : {
        "type" : "object",
        "properties" : {
          "status" : {
            "type" : "integer",
            "format" : "int32"
          },
          "errorCode" : {
            "type" : "string"
          },
          "userMessage" : {
            "type" : "string"
          },
          "developerMessage" : {
            "type" : "string"
          },
          "moreInfo" : {
            "type" : "string"
          }
        },
        "required" : [ "status" ]
      },
      "PrisonerBalanceAdjustmentDto" : {
        "type" : "object",
        "properties" : {
          "voAmount" : {
            "type" : "integer",
            "format" : "int32",
            "description" : "VOs that need to be added or removed (can be negative, negative denotes REMOVE)",
            "example" : 5
          },
          "pvoAmount" : {
            "type" : "integer",
            "format" : "int32",
            "description" : "PVOs that need to be added or removed (can be negative, negative denotes REMOVE)",
            "example" : 5
          },
          "adjustmentReasonType" : {
            "type" : "string",
            "description" : "Adjustment Reason Type",
            "enum" : [ "GOVERNOR_ADJUSTMENT", "BALANCE_TRANSFER_FROM_PREVIOUS_PRISON", "CORRECTIVE_ACTION", "EXCHANGE_FOR_PIN_PHONE_CREDIT", "OTHER" ]
          },
          "adjustmentReasonText" : {
            "type" : "string",
            "description" : "Adjustment Reason Text"
          },
          "userName" : {
            "type" : "string",
            "description" : "Staff user ID",
            "example" : "ABC1234"
          }
        },
        "required" : [ "adjustmentReasonType", "userName" ]
      },
      "PrisonerBalanceDto" : {
        "type" : "object",
        "properties" : {
          "prisonerId" : {
            "type" : "string",
            "description" : "nomsNumber of the prisoner",
            "example" : "AA123456"
          },
          "voBalance" : {
            "type" : "integer",
            "format" : "int32",
            "description" : "The current VO balance (can be negative)",
            "example" : 5
          },
          "pvoBalance" : {
            "type" : "integer",
            "format" : "int32",
            "description" : "The current PVO balance (can be negative)",
            "example" : 2
